{
    "name": "local-webhooks",
    "version": "0.3.0",
    "homepage": "https://lw.gocho.live",
    "keywords": [
        "webhook",
        "developer-tool",
        "cli-tool"
    ],
    "license": "MIT",
    "repository": "github:gochomugo/local-webhooks",
    "scripts": {
        "format": "prettier --write '{src,www,.github}/**/*.{html,js,yml}' '{schemas/**/,./}*.{json,md,yml}'",
        "image": "docker build --tag ${npm_package_config_docker_tag}:${npm_package_version} .",
        "push-image": "docker push ${npm_package_config_docker_tag}:${npm_package_version}",
        "start": "bin/lw-server",
        "test": "npm run test:format && npm run test:lint",
        "test:format": "prettier --check '{src,www,.github}/**/*.{html,js,yml}' '{schemas/**/,./}*.{json,md,yml}'",
        "test:lint": "eslint src/"
    },
    "bin": {
        "local-webhooks": "bin/lw-client",
        "lw-client": "bin/lw-client",
        "lw-server": "bin/lw-server"
    },
    "dependencies": {
        "@forfuture/wserver": "^0.3.3",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "chalk": "^5.6.2",
        "commander": "^14.0.2",
        "express": "^5.1.0",
        "pg": "^8.16.3",
        "pg-format": "^1.0.4"
    },
    "devDependencies": {
        "eslint": "^9.39.1",
        "prettier": "^3.6.2"
    },
    "config": {
        "docker_tag": "gochomugo/local-webhooks"
    },
    "prettier": {
        "arrowParens": "always",
        "endOfLine": "lf",
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
