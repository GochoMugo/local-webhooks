{
    "name": "local-webhooks",
    "version": "0.0.0",
    "homepage": "https://lw.gocho.live",
    "keywords": [
        "webhook",
        "developer-tool",
        "cli-tool"
    ],
    "license": "MIT",
    "repository": "github:gochomugo/local-webhooks",
    "scripts": {
        "format": "prettier --write '{src,www,.github}/**/*.{html,js,yml}' './*.{json,md}'",
        "image": "docker build --tag ${npm_package_config_docker_tag}:${npm_package_version} .",
        "push-image": "docker push ${npm_package_config_docker_tag}:${npm_package_version}",
        "start": "bin/lw-server",
        "test": "npm run test:format",
        "test:format": "prettier --check '{src,www,.github}/**/*.{html,js,yml}' './*.{json,md}'"
    },
    "bin": {
        "lw-client": "bin/lw-client",
        "lw-server": "bin/lw-server"
    },
    "dependencies": {
        "@forfuture/wserver": "^0.2.0",
        "body-parser": "^1.20.2",
        "chalk": "^4.1.2",
        "express": "^4.18.3"
    },
    "devDependencies": {
        "prettier": "^3.6.2"
    },
    "config": {
        "docker_tag": "gochomugo/local-webhooks"
    },
    "prettier": {
        "arrowParens": "always",
        "endOfLine": "lf",
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
